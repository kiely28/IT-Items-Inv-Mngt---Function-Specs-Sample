2ï¸âƒ£ Update Stored Procedures

âœ… Get All

ALTER PROCEDURE sp_Students_GetAll
AS
BEGIN
    SET NOCOUNT ON;

    SELECT Id, Name, Age, Category
    FROM Students
END
GO


---

âœ… Insert

ALTER PROCEDURE sp_Students_Insert
    @Name NVARCHAR(100),
    @Age INT,
    @Category NVARCHAR(50)
AS
BEGIN
    SET NOCOUNT ON;

    INSERT INTO Students (Name, Age, Category)
    VALUES (@Name, @Age, @Category)
END
GO


---

âœ… Update

ALTER PROCEDURE sp_Students_Update
    @Id INT,
    @Name NVARCHAR(100),
    @Age INT,
    @Category NVARCHAR(50)
AS
BEGIN
    SET NOCOUNT ON;

    UPDATE Students
    SET Name = @Name,
        Age = @Age,
        Category = @Category
    WHERE Id = @Id
END
GO


---

âœ… Delete (No Change)

ALTER PROCEDURE sp_Students_Delete
    @Id INT
AS
BEGIN
    DELETE FROM Students
    WHERE Id = @Id
END
GO


