<h2>Delete Item</h2>

<div>
    <p>Are you sure you want to delete this item?</p>
    <h4>@Model.ItemName</h4>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemID" />
        <button type="submit" class="btn btn-danger">Delete</button>
